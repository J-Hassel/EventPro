<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    tools:context=".fragments.MoreFragment">

    <Button
        android:id="@+id/button_profile"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/colorBackground"
        android:drawableStart="@drawable/ic_account"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:paddingStart="20dp"
        android:text="@string/text_profile"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_login_register"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/colorBackground"
        android:drawableStart="@drawable/ic_sign_in_register"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:paddingStart="20dp"
        android:text="@string/text_login_register"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_map"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/colorBackground"
        android:drawableStart="@drawable/ic_map"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:paddingStart="20dp"
        android:text="@string/text_map"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_information"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/colorBackground"
        android:drawableStart="@drawable/ic_info"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:paddingStart="20dp"
        android:text="@string/text_information"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/colorBackground"
        android:drawableStart="@drawable/ic_settings"
        android:drawablePadding="20dp"
        android:gravity="left|center"
        android:paddingStart="20dp"
        android:text="@string/text_settings"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="24sp" />

</LinearLayout>