<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jon.eventpro">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".java.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".java.ui.InformationActivity" />
        <activity android:name=".java.ui.ProfileActivity" />
        <activity android:name=".java.ui.ProfileSettingsActivity" />
        <activity android:name=".java.ui.EventActivity" />
        <activity android:name=".java.ui.CreateEventActivity" />
        <activity android:name=".java.ui.MessagingActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCZKA99l42yx26GblonuoWVlti9u9Tl0ao" />

        <activity
            android:name=".java.ui.PopupActivity"
            android:theme="@style/AppTheme.PopupTheme"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".java.ui.LoginActivity" />
        <activity android:name=".java.ui.RegisterActivity"></activity>
    </application>

</manifest>